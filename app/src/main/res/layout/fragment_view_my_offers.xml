<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/creamy"
    tools:context="dakakeen.dakakeen.MyOffers.ViewMyOffers">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/offerStateLinearLayput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/offer_state"
                android:textColor="@color/purple" />

            <Spinner
                android:id="@+id/offerStateSٍpinner"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:entries="@array/offerState" />

        </LinearLayout>

        <ListView
            android:id="@+id/MyoffersList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/offerStateLinearLayput" />

    </RelativeLayout>

</FrameLayout>
